{
    "name": "anibal/simple-php-router",
    "type": "library",
    "homepage": "https://github.com/anibalmd32/simple-php-router",
    "description": "A routing library for PHP web apps",
    "require": {
        "php": ">=8.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "^4.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SimplePhpRouter\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Anibal Mendoza",
            "email": "anibalmd32@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyze": "phpstan analyze src --level=7",
        "test:init": "./vendor/bin/pest --init",
        "test:run": "./vendor/bin/pest"
    }
}